{
  "manifest_version": 3,
  "name": "Multi PDF Downloader",
  "version": "1.0.0",
  "description": "Download all PDFs from all open tabs when the button is clicked.",
  "permissions": ["tabs", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download PDFs",
    "default_icon": {
      "16": "icons/pdf-icon-16.png",
      "32": "icons/pdf-icon-32.png"
    }
  },
  "icons": {
    "16": "icons/pdf-icon-16.png",
    "32": "icons/pdf-icon-32.png",
    "48": "icons/pdf-icon-48.png",
    "128": "icons/pdf-icon-128.png"
  }
}
